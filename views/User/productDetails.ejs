          <script>
            function rate(element) {
              let rating = element.getAttribute("data-rating");

              let stars = document.querySelectorAll(".fa-star");

              // Loop through each star
              stars.forEach((star) => {
                // let starRating = star.getAttribute('data-rating');
                // Checking current star rating position
                if (star.getAttribute("data-rating") <= rating) {
                  star.classList.remove("text-muted");
                  star.classList.add("text-secondary");
                } else {
                  star.classList.remove("text-secondary");
                  star.classList.add("text-muted");
                }
              });

              // update the hidden input with rating
              document.querySelector('input[name="rating"]').value = rating;
            }

            function resetRating() {
              let stars = document.querySelectorAll(".fa-star");
              stars.forEach((star) => {
                star.classList.remove("text-secondary");
                star.classList.add("text-muted");
              });

              document.querySelector('input[name="rating"]').value = 0;
            }

            // form submission
            document
              .getElementById("review-form")
              .addEventListener("submit", async function (event) {
                event.preventDefault();

                console.log("Iam in fn");

                const form = event.target;

                const productId = form.getAttribute("data-product-id");

                console.log(productId, "im in productId");

                const formData = {
                  name: form.name.value,
                  email: form.email.value,
                  review: form.review.value,
                  rating: form.rating.value,
                };

                console.log("formData", formData);

                try {
                  // Send the form data as JSON using fetch
                  const response = await fetch(
                    `/productDetails/${productId}/review`,
                    {
                      method: "POST",
                      headers: {
                        "Content-Type": "application/json",
                      },
                      body: JSON.stringify(formData),
                    }
                  );

                  if (response.ok) {
                    const result = await response.json();

                    alert("Review submitted successfully!");

                    form.reset();

                    //reset star rating

                    resetRating();
                  } else {
                    alert("Failed to submit the review. Please try again.");
                  }
                } catch (error) {
                  console.error("Error submitting review:", error);
                  alert(
                    "An error occurred while submitting your review. Please try again."
                  );
                }
              });
          </script>




<%- include('../Layouts/header.ejs') %>


<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Cart</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Pages</a></li>
        <li class="breadcrumb-item active text-white">Cart</li>
    </ol>
</div>
<!-- Single Page Header End -->


<!-- Cart Page Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="table-responsive">
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">Products</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Total</th>
                    <th scope="col">Handle</th>
                  </tr>
                </thead>
                <tbody>
                    <% myCart.product.forEach(item => { %>
                    <tr>
                        <th scope="row">
                            <div class="d-flex align-items-center">
                                <img src="/uploads/<%= item.productId.image[0] %>" class="img-fluid me-5 rounded-circle" style="width: 80px; height: 80px;" alt="">
                            </div>
                        </th>
                        <td>
                            <p class="mb-0 mt-4"><%= item.productId.title %></p></p>
                        </td>
                        <td>
                            <p class="mb-0 mt-4">₹ <%= item.productId.regularPrice %> /kg </p>
                        </td>
                        <td>
                            <div class="input-group quantity mt-4" style="width: 100px;">
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-minus rounded-circle bg-light border" data-product-id="<%= item.productId._id %>" >
                                    <i class="fa fa-minus"></i>
                                    </button>
                                </div>
                                <input type="text" class="form-control form-control-sm text-center border-0" value="<%= item.quantity %>" readonly>
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-plus rounded-circle bg-light border" data-product-id="<%= item.productId._id %>">
                                        <i class="fa fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </td>
                        <td>
                            <p class="mb-0 mt-4"  data-product-id="<%= item.productId._id %>"  data-unit-price="<%= item.productId.regularPrice %>">₹<%= (item.productId.regularPrice * item.quantity).toFixed(2) %> </p>
                        </td>
                        <td>
                            <button class="btn btn-md rounded-circle bg-light border mt-4" onclick="removeFromCart('<%= item.productId._id %>')" >
                                <i class="fa fa-times text-danger"></i>
                            </button>
                        </td>
                    
                    </tr>
                    <% }); %>

                    <script>
                        function removeFromCart(productId) {
                          fetch(`/mycart`, {
                            method: 'DELETE',
                            headers: {
                              'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({ productId })
                          })
                          .then(response => response.json())
                          .then(data => {
                            if (data.success) {
                              alert(data.message);
                              location.reload(); // Refresh the page to reflect the changes
                            } else {
                              alert(data.message);
                            }
                          })
                          .catch(error => console.error('Error:', error));
                        }

                        document.addEventListener('DOMContentLoaded', () => {
             document.querySelectorAll('.btn-plus').forEach(button => {
                button.addEventListener('click', () => {
             const productId = button.getAttribute('data-product-id');
               updateCartQuantity(productId, 'increment');
            });
          });

            document.querySelectorAll('.btn-minus').forEach(button => {
            button.addEventListener('click', () => {
             const productId = button.getAttribute('data-product-id');
            updateCartQuantity(productId, 'decrement');
           });
            });
            });

       function updateCartQuantity(productId, action) {
       fetch(`/mycart/update`, {
        method: 'PATCH',
    headers: {
      'Content-Type': 'application/json'
    },
    body: JSON.stringify({ productId, action })
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
           // Finding the input element and update its value
      const quantityInput = document.querySelector(`input[data-product-id="${productId}"]`)
      quantityInput.value = data.newQuantity;


         // Update total price
            const totalPriceElement = document.querySelector(`p[data-product-id="${productId}"]`);
            const unitPrice = parseFloat(totalPriceElement.getAttribute('data-unit-price'));
            const newTotalPrice = (unitPrice * data.newQuantity).toFixed(2);
            totalPriceElement.textContent = `₹${newTotalPrice}`;
           
            //   location.reload();
    } else {
        toastr.error(data.message);
    }
  })
  .catch(error => console.error('Error:', error));
}

                      </script>
                      
                </tbody>
            </table>
        </div>
        <div class="mt-5">
            <input type="text" class="border-0 border-bottom rounded me-5 py-3 mb-4" placeholder="Coupon Code">
            <button class="btn border-secondary rounded-pill px-4 py-3 text-primary" type="button">Apply Coupon</button>
        </div>
        <div class="row g-4 justify-content-end">
            <div class="col-8"></div>
            <div class="col-sm-8 col-md-7 col-lg-6 col-xl-4">
                <div class="bg-light rounded">
                    <div class="p-4">
                        <h1 class="display-6 mb-4">Cart <span class="fw-normal">Total</span></h1>
                        <div class="d-flex justify-content-between mb-4">
                            <h5 class="mb-0 me-4">Subtotal:</h5>
                            <p class="mb-0"><%= myCart.product.reduce((total, item) => total + item.productId.price * item.quantity, 0).toFixed(2) %></p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h5 class="mb-0 me-4">Shipping</h5>
                            <div class="">
                                <p class="mb-0">Flat rate: $3.00</p>
                            </div>
                        </div>
                        <p class="mb-0 text-end">Shipping to Ukraine.</p>
                    </div>
                    <div class="py-4 mb-4 border-top border-bottom d-flex justify-content-between">
                        <h5 class="mb-0 ps-4 me-4">Total</h5>
                        <p class="mb-0 pe-4"><%= (myCart.product.reduce((total, item) => total + item.productId.price * item.quantity, 0) + 3).toFixed(2) %> $</p>
                    </div>
                    <button class="btn border-secondary rounded-pill px-4 py-3 text-primary text-uppercase mb-4 ms-4" type="button">Proceed Checkout</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart Page End -->


<%- include('../Layouts/footer.ejs') %>
